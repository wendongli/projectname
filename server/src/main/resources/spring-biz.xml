<?xml version="1.0" encoding="UTF-8"?>
<beans default-autowire="byName"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:component-scan base-package="com.lwd.test.projectname.biz.service.impl">
		<context:include-filter type="regex"
			expression=".*Impl" />
	</context:component-scan>

	<import resource="hsf-provider.xml" />
	 
	<bean id="gson" class="com.google.gson.Gson" />
	
	<bean id="applicationUtil" class="com.lwd.test.projectname.biz.utility.ApplicationUtil" />

	<bean id="imageUtil" class="com.lwd.test.projectname.biz.utility.ImageUtil" />
	
	<bean id="ConfigUtil" class="com.lwd.test.projectname.biz.utility.ConfigUtil">
		<property name="cdnHost" value="${image.cdnHost}" />
		<property name="avatarUrl" value="${avatar.url}" />
		<property name="env" value="${ENV}" />
	</bean>
	
</beans>
